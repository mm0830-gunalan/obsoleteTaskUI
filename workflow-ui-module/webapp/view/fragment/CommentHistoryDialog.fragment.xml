<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="commentsDialog"
        title="All Comments"
        draggable="true"
        resizable="true"
        contentWidth="1200px"
        contentHeight="600px"
        class="sapUiContentPadding"
    >
        <Table
            items="{comments>/items}"
            class="sapUiSmallMarginTop"
            alternateRowColors="true"
            fixedLayout="true"
        >
            <headerToolbar>
                <Toolbar>
                    <Title
                        text="Comments Overview"
                        level="H2"
                    />
                </Toolbar>
            </headerToolbar>

            <columns>
                <Column
                    width="8rem"
                    hAlign="Center"
                >
                    <Text
                        text="Plant"
                        class="sapUiSmallMarginBottom"
                    />
                </Column>

                <Column
                    width="10rem"
                    hAlign="Center"
                >
                    <Text
                        text="Component"
                        class="sapUiSmallMarginBottom"
                    />
                </Column>

                <Column
                    width="20rem"
                    hAlign="Left"
                     visible="{context>/handlingcmt}"
                >
                    <Text
                        text="Handling"
                        class="sapUiSmallMarginBottom"
                    />
                </Column>

                <Column
                    width="20rem"
                    hAlign="Left"
                    visible="{context>/scrapcmt}"
                >
                    <Text
                        text="Scrapping"
                        class="sapUiSmallMarginBottom"
                    />
                </Column>

                <Column
                    width="20rem"
                    hAlign="Left"
                    visible="{context>/alternativecmt}"
                >
                    <Text
                        text="Internal Use"
                        class="sapUiSmallMarginBottom"
                    />
                </Column>

                <Column
                    width="20rem"
                    hAlign="Left"
                    visible="{context>/subsidiarycmt}"
                >
                    <Text
                        text="Subsidiary"
                        class="sapUiSmallMarginBottom"
                    />
                </Column>

                <Column
                    width="20rem"
                    hAlign="Left"
                    visible="{context>/componentcmt}"
                >
                    <Text
                        text="Customer Response"
                        class="sapUiSmallMarginBottom"
                    />
                </Column>
            </columns>

            <items>
                <ColumnListItem vAlign="Top">
                    <cells>
                        <!-- Plant -->
                        <VBox
                            alignItems="Center"
                            justifyContent="Center"
                            class="sapUiSmallMargin"
                        >
                            <Text
                                text="{comments>plant}"
                                class="sapUiMediumMarginTop"
                            />
                        </VBox>

                        <!-- Component -->
                        <VBox
                            alignItems="Center"
                            justifyContent="Center"
                            class="sapUiSmallMargin"
                        >
                            <Text
                                text="{comments>component}"
                                class="sapUiMediumMarginTop"
                            />
                        </VBox>

                        <!-- Handling -->
                        <VBox
                            class="sapUiSmallMargin"
                            renderType="Bare"
                        >
                            <ObjectStatus
                                class="sapUiTinyMarginBottom"
                                text="Handling: {comments>handling}"
                                state="Information"
                            />
                            <TextArea
                                value="{comments>commentHandling}"
                                rows="4"
                                width="100%"
                                editable="false"
                                class="sapUiTinyMarginTop"
                            />
                        </VBox>

                        <!-- Scrap -->
                        <VBox
                            class="sapUiSmallMargin"
                            renderType="Bare"
                        >
                            <ObjectStatus
                                class="sapUiTinyMarginBottom"
                                text="Scrap: {comments>scrapDecision}"
                                state="Information"
                            />
                            <TextArea
                                value="{comments>commentScrap}"
                                rows="4"
                                width="100%"
                                editable="false"
                                class="sapUiTinyMarginTop"
                            />
                        </VBox>

                        <!-- Internal Use -->
                        <VBox
                            class="sapUiSmallMargin"
                            renderType="Bare"
                        >
                            <ObjectStatus
                                class="sapUiTinyMarginBottom"
                                text="Internal Use: {comments>internalUse}"
                                state="Information"
                            />
                            <TextArea
                                value="{comments>commentAlternative}"
                                rows="4"
                                width="100%"
                                editable="false"
                                class="sapUiTinyMarginTop"
                            />
                        </VBox>

                        <!-- Subsidiary -->
                        <VBox
                            class="sapUiSmallMargin"
                            renderType="Bare"
                        >
                            <ObjectStatus
                                class="sapUiTinyMarginBottom"
                                text="Sell to Subsidiary: {comments>sellToSubsidiary}"
                                state="Information"
                            />
                            <TextArea
                                value="{comments>commentSubsidiary}"
                                rows="4"
                                width="100%"
                                editable="false"
                                class="sapUiTinyMarginTop"
                            />
                        </VBox>

                        <!-- Customer -->
                        <VBox
                            class="sapUiSmallMargin"
                            renderType="Bare"
                        >
                            <ObjectStatus
                                class="sapUiTinyMarginBottom"
                                text="Customer Response: {comments>customerResponse}"
                                state="Information"
                            />
                            <TextArea
                                value="{comments>commentComponent}"
                                rows="4"
                                width="100%"
                                editable="false"
                                class="sapUiTinyMarginTop"
                            />
                        </VBox>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <endButton>
            <Button
                text="Close"
                press="onCloseCommentsDialog"
                type="Emphasized"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
