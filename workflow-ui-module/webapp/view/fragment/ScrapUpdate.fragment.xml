<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="scrapDialog"
        title="Update Scrapping"
        draggable="true"
        resizable="true"
    >
        <VBox class="sapUiSmallMargin">
            <Label text="Scrapping" />
            <Select
                width="100%"
                selectedKey="{scrap>/scrapDecision}"
                forceSelection="false"
            >
                <items>
                    <core:Item
                        key="To be scrapped"
                        text="To be scrapped"
                    />
                    <core:Item
                        key="Keep"
                        text="Keep"
                    />
                </items>
            </Select>

            <!-- Comment field -->
            <Label
                text="Comment"
                class="sapUiSmallMarginTop"
            />
            <TextArea
                value="{scrap>/commentScrap}"
                width="100%"
                rows="4"
                placeholder="Enter comment..."
            />
        </VBox>

        <buttons>
            <Button
                text="Cancel"
                press="onCancelScrapDialog"
            />

            <Button
                text="Apply"
                type="Emphasized"
                press="onApplyScrapUpdate"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
