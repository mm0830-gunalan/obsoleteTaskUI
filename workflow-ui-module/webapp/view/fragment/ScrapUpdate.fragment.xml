<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="scrapDialog"
        title="Update Scrapping"
        draggable="true"
        resizable="true">

        <VBox class="sapUiSmallMargin">
            <Label text="Scrapping" />
            <Select
                id="massHandlingSelectScrap"
                width="100%">
                <items>
                    <core:Item key="To be scrapped" text="To be scrapped" />
                    <core:Item key="Keep" text="Keep" />
                </items>
            </Select>
        </VBox>

        <buttons>
            <Button
                text="Cancel"
                press="onCancelScrapDialog" />

            <Button
                text="Apply"
                type="Emphasized"
                press="onApplyScrapUpdate" />
        </buttons>

    </Dialog>
</core:FragmentDefinition>
