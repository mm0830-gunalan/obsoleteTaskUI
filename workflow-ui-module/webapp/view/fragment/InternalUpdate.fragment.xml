<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="internalDialog"
        title="Update Internal usage"
        draggable="true"
        resizable="true"
    >
        <VBox class="sapUiSmallMargin">
            <Label text="Inernal use" />

            <CheckBox selected="{internal>/internalUse}" />

            <!-- Comment field -->
            <Label
                text="Comment"
                class="sapUiSmallMarginTop"
            />
            <TextArea
                value="{internal>/commentAlternative}"
                width="100%"
                rows="4"
                placeholder="Enter comment..."
            />
        </VBox>

        <buttons>
            <Button
                text="Cancel"
                press="onCancelInternalDialog"
            />

            <Button
                text="Apply"
                type="Emphasized"
                press="onApplyInternalUpdate"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
