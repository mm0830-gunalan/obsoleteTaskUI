<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="updateCommentsDialog"
        title="Update Comments"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Enter comment to apply to selected rows" />
                <TextArea
                    id="bulkComments"
                    width="100%"
                    rows="4"
                    placeholder="Enter comment"
                />
            </VBox>
        </content>

        <beginButton>
            <Button
                text="Apply"
                type="Emphasized"
                press="onApplyComments"
            />
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                press="onCloseCommentsDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
