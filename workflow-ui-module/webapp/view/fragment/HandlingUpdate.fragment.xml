<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="handlingDialog"
        title="Update Handling"
        draggable="true"
        resizable="true">

        <VBox class="sapUiSmallMargin">
            <Label text="Handling" />
            <Select
                id="massHandlingSelect"
                width="100%">
                <items>
                    <core:Item key="Scrapping" text="Scrapping" />
                    <core:Item key="Alternative use" text="Alternative use" />
                </items>
            </Select>
        </VBox>

        <buttons>
            <Button
                text="Cancel"
                press="onCancelHandlingDialog" />

            <Button
                text="Apply"
                type="Emphasized"
                press="onApplyHandlingUpdate" />
        </buttons>

    </Dialog>
</core:FragmentDefinition>
